{% extends "base.html" %}
{% block title %}Home{% endblock %}
{% block header %}
    {{ super() }}
    <h1>Home</h1>
{% endblock %}
{% block main %}
    {{ super() }}
    {# List all artists and albums with tracks #}
    <dl>
	{% for artist in artists %}
 	    <section>
 		<dt>
		    <h2>{{ artist.title|e }}</h2>
		</dt>
		<dd>
		{% for album in artist.albums %}
		    <h3>{{ album.title|e }}</h3>
		    {% for track in album.tracks %}
			{# TODO: make this track.pos #}
			<p>{{ loop.index|e }} - {{ track.title|e }}</p>
		    {% endfor %}
		{% endfor %}
		</dd>
 	    </section>
	{% endfor %}
    </dl>
    {# upload widget #}
    <form method="post" action="/upload" enctype="multipart/form-data">
	<input type="file" id="files" name="myFile" multiple webkitdirectory />
	<button>Send</button>
    </form>
{% endblock %} 
